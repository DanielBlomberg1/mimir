<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TableLayout
        android:id="@+id/sensorSquarePreset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        android:background="@drawable/sensor_layout">

        <TableRow
            android:id="@+id/sensorSquareRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >
            <TextView
                android:id="@+id/sensorTitle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:text="Gnss"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:shapeAppearance="@style/MyTextAppearance"
                android:layout_weight="6"
                />

            <TextView
                android:id="@+id/sensorState"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:text="Disabled"
                android:textColor="@color/mauve"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:shapeAppearance="@style/MyTextAppearance"
                android:layout_weight="2"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sensorSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track"
                app:switchMinWidth="40dp"
                android:layout_weight="1.3"
                android:scaleX="1"
                android:scaleY="1.3"/>

        </TableRow>
    </TableLayout>

</LinearLayout>