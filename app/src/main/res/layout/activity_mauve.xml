<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="126dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:text="Mimir"
        android:textSize="46sp"
        android:textColor="@color/dark_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/MyTextAppearance" />/>

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:ems="5"
        android:text="Sensor logging"
        android:textSize="26sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:shapeAppearance="@style/MyTextAppearance" />/>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:checked="false"
        android:text="Start logging"
        android:textOff="Start survey"
        android:textOn="Stop survey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
        app:shapeAppearance="@style/MyButtonShapeAppearance" />/>

    <RelativeLayout
        android:layout_width="371dp"
        android:layout_height="123dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/my_shapeable_image_view"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:src="@drawable/ic_mauve_download"
            android:tint="@color/blue"
            app:shapeAppearance="@style/MyButtonShapeAppearance"
            app:strokeColor="@color/blue" />

        <TextView
            android:id="@+id/my_button_text"
            android:layout_width="153dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/my_shapeable_image_view"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="-14dp"
            android:text="Download latest report"
            android:textColor="@color/blue" />

    </RelativeLayout>

    <?ignore
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/downloadDataButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_mauve_download"
        android:tint="@color/blue"
        android:text="My Button"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        app:shapeAppearance="@style/MyButtonShapeAppearance"
        app:strokeColor="@color/blue" />/>
    ?>
</androidx.constraintlayout.widget.ConstraintLayout>